public class Main
{
    public static void main(String[] args) {
        int [] myvar= new int[args.length];
        int i=0;
        for (String s: args)
        {
            myvar[i]=Integer.parseInt(s);
            i++;
        }
        int sum=0;
        float average;
        for(i=0;i<myvar.length;i++)
        {
            sum=sum+myvar[i];
        }
        average=sum/myvar.length;
        System.out.println("sum = "+sum);
        System.out.println("average = "+average);
    }
}
